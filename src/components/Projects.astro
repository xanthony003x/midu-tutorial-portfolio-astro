const PROJECTS = [
    {
        title: 'Project 1',
        description: 'Lorem ipsum dolor si amet adispsic elit. Nulla vitae diam euismod',
        link: '#',
        image: '../../public/images/OnePlan-Scheduler-Project-Online.webp',
        tags: ['HTML', 'CSS', 'JavaScript']
    }
]
---

{
    PROJECTS.map(({ image, title, description, tags }) => (
        <article>
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul>
            {tags.map(tag => (
                <li>{tag}</li>
            ))}
        </ul>
        <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${image}`}/>
        </article>
    ))
}